<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            xmlns:sample="clr-namespace:Sample"
            x:Class="Sample.MainPage"
            Title="NFC">
    
    <TabbedPage.Children>
        <NavigationPage>
            <x:Arguments>
                <sample:ReadPage Title="Read" />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage>
            <x:Arguments>
                <sample:WritePage Title="Write" />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>