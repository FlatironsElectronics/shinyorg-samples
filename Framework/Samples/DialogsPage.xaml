<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.DialogsPage"
             Title="Dialogs">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Action Sheet"
                    Command="{Binding ActionSheet}" />

            <Button Text="Alert"
                    Command="{Binding Alert}" />

            <Button Text="Confirm"
                    Command="{Binding Confirm}" />

            <Button Text="Input"
                    Command="{Binding Input}" />

            <Button Text="Loading"
                    Command="{Binding Loading}" />

            <Button Text="Loading Snackbar"
                    Command="{Binding LoadingSnackbar}" />

            <Button Text="Snackbar"
                    Command="{Binding Snackbar}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>