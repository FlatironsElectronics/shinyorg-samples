<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:sample="clr-namespace:Sample"
            xmlns:shared="clr-namespace:Sample;assembly=Sample.Shared"
            SelectedTabColor="#C2E812"
            UnselectedTabColor="#4BA677"
            x:Class="Sample.MainPage"
            Title="Notifications">

    <TabbedPage.Children>
        <sample:CreatePage Title="Create">
            <ContentPage.IconImageSource>
                <FontImageSource Glyph="&#xf4ad;"
                                 FontFamily="FAS" />
            </ContentPage.IconImageSource>
        </sample:CreatePage>

        <sample:PendingPage Title="Pending">
            <ContentPage.IconImageSource>
                <FontImageSource Glyph="&#xf03a;"
                                 FontFamily="FAS" />
            </ContentPage.IconImageSource>
        </sample:PendingPage>

        <shared:LogsPage Title="Logs">
            <ContentPage.IconImageSource>
                <FontImageSource Glyph="&#xf017;"
                                 FontFamily="FAS" />
            </ContentPage.IconImageSource>
        </shared:LogsPage>
    </TabbedPage.Children>
</TabbedPage>
